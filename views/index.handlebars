<div class="container">
  <div class="row" id="top-bar">
    <div class="col-xs-12 text-center">
      <h1>Eat A Burger</h1>
    </div>
</div>
    <div class="row">
      <div class="col">
<div class = "burgers">
    <h2> Burgers that are ready to be devoured:</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
   <li>{{this.burger_name}}</li>   
    {{/unless}}
    {{/each}}
</ul>
</div>

<div class = "devoured">
  <h2> Burgers that have been devoured:</h2>
   <ul>
   {{#each burgers}}
   {{#if this.devoured}}
   <li>{{this.burger_name}}</li>
   {{/if}}
   {{/each}}
  
</div>

<h2>Update Menu: </h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>
  <button type="submit">New Orderr</button>

 </form>
