<h1>Welcome to Eat-A-Burger</h1> 

<div class = "burgers">
    <h2> Burgers that are ready to be devoured:</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    
     <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='notdevoured'> {{this.burger_name}}</button>
              </form>
            </div>
    {{/unless}}
    {{/each}}
</ul>
</div>

<div class = "devoured">
  <h2> Burgers that have been devoured:</h2>
   <ul>
   {{#each burgers}}
   {{#if this.devoured}}
   <li>{{this.burger_name}}</li>
   {{/if}}
   {{/each}}
  
</div>

<div class="row">
    <form action="/burgers" method="POST">
      <input type="text" class="submitburger" name="burger_name" placeholder="New Burger">
      <button type="submit" class="btn">New Order</button>
    </form>
  </div>