<div class="container">
  <div class="row" id="top-bar">
    <div class="col-xs-12 text-center">
      <h1>Eat A Burger</h1>
    </div>
</div>
    <div class="row">
      <div class="col">
<div class = "burgers">
    <h2> Burgers that are ready to be devoured:</h2>



<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burgers-block}}
  {{/unless}}
  {{/each}}
</ul>


<h2>Burgers that have been devoured:</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}
{{> burgers/burgers-block}}
  {{/if}}
  {{/each}}
</ul>



<h2>Update Menu: </h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>
  <button type="submit">New Orderr</button>

 </form>
